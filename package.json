{
  "name": "dcc-sfa",
  "version": "1.0.0",
  "description": "DCC SFA - Sales Force Automation System",
  "private": true,
  "workspaces": [
    "dcc-sfa-be",
    "dcc-sfa-fe"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "install:all": "npm install && npm install --workspaces",
    "clean": "turbo clean",
    "kill:ports": "npx kill-port 4000 5173"
  },
  "devDependencies": {
    "kill-port": "^2.0.1",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "turbo": "^2.5.8"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=16.0.0"
  }
}
