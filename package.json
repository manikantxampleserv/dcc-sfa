{
  "name": "dcc-sfa",
  "version": "1.0.0",
  "description": "DCC SFA - Sales Force Automation System",
  "private": true,
  "workspaces": [
    "dcc-sfa-be",
    "dcc-sfa-fe"
  ],
  "scripts": {
    "setup": "npm install && npm run prisma:generate",
    "dev": "concurrently --names \"BE,FE\" --prefix-colors \"blue,green\" --kill-others \"npm run dev --workspace=dcc-sfa-be\" \"npm run dev --workspace=dcc-sfa-fe\"",
    "build": "concurrently --names \"BE,FE\" --prefix-colors \"blue,green\" \"npm run build --workspace=dcc-sfa-be\" \"npm run build --workspace=dcc-sfa-fe\"",
    "start": "concurrently --names \"BE,FE\" --prefix-colors \"blue,green\" --kill-others \"npm run start --workspace=dcc-sfa-be\" \"npm run preview --workspace=dcc-sfa-fe\"",
    "prisma:generate": "npm run prisma:generate --workspace=dcc-sfa-be",
    "seed:clean": "npm run seed:clean --workspace=dcc-sfa-be",
    "seed:generate": "npm run seed:generate --workspace=dcc-sfa-be",
    "seed": "npm run seed --workspace=dcc-sfa-be",
    "create:admin": "npm run create:admin --workspace=dcc-sfa-be",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "npx kill-port 4000 5173 && npx rimraf node_modules dcc-sfa-be/node_modules dcc-sfa-fe/node_modules"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "recharts": "^3.3.0"
  }
}
